    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/mysite/manage.py"
        },
        {
            "name": "Python: Django Debug Single Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mysite/manage.py",
            "args": [
                "test",
                "${relativeFileDirname}"
            ],
            "django": true
        },
    ]
}